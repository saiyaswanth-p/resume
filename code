<script>
    function previewPhoto() {
        const file = document.getElementById('photo').files[0];
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('photo-preview').src = e.target.result;
            document.getElementById('photo-preview').style.display = 'block';
        }
        reader.readAsDataURL(file);
    }

    function generateResume() {
        const photoSrc = document.getElementById('photo-preview').src;
        document.getElementById('stylish-photo').src = photoSrc;
        document.getElementById('basic-photo').src = photoSrc;
    }

    function showStylish() {
        document.getElementById('stylish').style.display = 'flex';
        document.getElementById('basic').style.display = 'none';
    }

    function showBasic() {
        document.getElementById('basic').style.display = 'block';
        document.getElementById('stylish').style.display = 'none';
    }

    function downloadPDF() {
        window.print();
    }
</script>

